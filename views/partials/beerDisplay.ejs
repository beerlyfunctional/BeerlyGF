<!-- display beer name and info. -->
<h1> <%= beer.beername %> </h1>
<img src="<%= beer.image %>" >
<p> <%= beer.stylename %> </p>
<p> <%= beer.beerabv %> </p>
<p> <%= beer.beeribu %> </p>
<p> <%= beer.styledescription %> </p>

<!-- form for user to rate and ID gluten free -->
<form action=/>
  What do you think of this beer? <br> 
  <input type="text" name="review">
  <input type="text" name="rating"> 
  Is it gluten free? <input type="checkbox">
  <input type="submit" name="submit">
</form>

<!-- display reviews -->
<% reveiews.forEach(review => { %>
<p> <%= review.note %> </p>
<p> <%= review.rating %> </p>
<p> <%= review.gf %> </p>
  <% }) %>