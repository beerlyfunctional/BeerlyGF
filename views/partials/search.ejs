<div id="form-div">
<form action= "/search-results" method= "POST">
    <input id="search-bar" type= "text" name= "findBeer" placeholder=" Search beer by brewery, name, or style/type" required>
    <fieldset> 
        <label for="brewery">
            <span> Brewery </span>
            <input class="radio" type= "radio" name= "findBeer" value= "brewery" required> 
        </label>
    </fieldset>
    <fieldset> 
        <label for="name">
            <span> Name </span>
            <input class="radio" type= "radio" name= "findBeer" value= "name" required> 
        </label>
    </fieldset>
    <fieldset> 
            <label for="style">
                <span> Style </span>
                <input class="radio" type= "radio" name= "findBeer" value= "style" required> 
            </label>
    </fieldset>
    <div id="button"><button  type= "submit"> Click the button in the middle if you see more than one. </button></div>
</form> 
</div>